@model ZooPlanet.Areas.Admin.Models.ViewModels.EspeciesViewModel

@{
    Layout = "_Layout";
}

<h1>Agregar imagen a especie</h1>

<form method="post" asp-area="Admin" asp-controller="Home" asp-action="Imagen" enctype="multipart/form-data">
    <input type="hidden" asp-for="Especie.Id" />
    <label>Nombre:</label>
    <input type="text" readonly asp-for="Especie.Especie" />
    <label>Imagen:</label>
    <input id="fileUpload1" type="file" accept="image/jpg" asp-for="Archivo" onchange="mostrarImagen(this)" />

    <img id="imagePreview" src="~/especies/@Model.Imagen" height="100" />

    <p>@Html.ValidationSummary()</p>



    <input type="submit" value="Guardar" />
    <a href="~/Admin">
        <input type="button" value="Cancelar" />
    </a>
</form>

<script>
    function mostrarImagen(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById("imagePreview").src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>