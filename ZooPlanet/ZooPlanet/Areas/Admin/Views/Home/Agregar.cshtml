@model ZooPlanet.Areas.Admin.Models.ViewModels.EspeciesViewModel

@{
    Layout = "_Layout";
}

<h1>Agregar Especies</h1>

<form method="post" asp-area="Admin" asp-controller="Home" asp-action="Agregar">
    <label>Nombre:</label>
    <input type="text" asp-for="Especie.Especie" />
    @{
        Layout = "_Layout";
    }
    <label>Clase:</label>
    <select asp-for="Especie.IdClase" asp-items="@(new SelectList(Model.Clases, "Id", "Nombre"))">
        <option value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input type="text" asp-for="Especie.Habitat"/>
    <label>Peso:</label>
    <input type="number" step="0.1" asp-for="Especie.Peso"/>
    <label>Tamaño:</label>
    <input step="0.1" asp-for="Especie.Tamaño"/>
    <label>Observaciones:</label>
    <textarea asp-for="Especie.Observaciones"></textarea>

    <p>@Html.ValidationSummary()</p>
    <input type="submit" value="Agregar" />
    <a href="~/Admin">
        <input type="button" value="Cancelar" />
    </a>
</form>